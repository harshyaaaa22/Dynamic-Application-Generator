            border: 2px solid red !important;
        }

        Alerts
        .alert {
            padding: 10px;
            margin-top: 10px;
            border-radius: 4px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        Status Messages
        .success {
            color: green;
            font-weight: bold;
        }

        .error, .login-danger {
            color: red;
            font-weight: bold;
        }

        .required {
            color: red;
        }

        Form Elements
        .required-field {
            border: 1px solid #ccc;
            padding: 5px;
        }

        Tab Strip Styling
        #tabstrip h2 {
            font-weight: lighter;
            font-size: 5em;
            line-height: 1;
            padding: 0 0 0 30px;
            margin: 0;
        }

        #tabstrip h2 span {
            background: none;
            padding-left: 5px;
            font-size: .3em;
            vertical-align: top;
        }

        #tabstrip p {
            margin: 0;
            padding: 0;
        }

        Default tab styling
        .k-tabstrip .k-item {
            background-color: #F5F5F5;
            Neutral Gray color: #424242;
            Dark Gray font font-weight: 600;
            padding: 7px 7px;
            border-radius: 5px 5px 0 0;
        }

        Active Tab
        .k-tabstrip .k-item.k-state-active {
            background-color: #E8F5E9;
            Light Green color: #2E7D32;
            Dark Green font-weight: bold;
        }

        Hover Effect
        .k-tabstrip .k-item:hover {
            background-color: #E0E0E0;
            Slightly darker gray color: #212121;
            Black
        }

        Tab Panel Content
        .k-tabstrip .k-content {
            background-color: #FFFFFF;
            White background color: #333;
            Standard font color padding: 15px;
            border-radius: 0 0 5px 5px;
        }

        Buttons
        #textButton1, #textButton {
            color: white;
            background-color: #2e37a4;
        }

        .form-submit .btn-success {
            border-radius: 12px;
            font-size: 16px;
            font-weight: 500;
            min-width: 131px;
            padding: 10px 15px;
            background-color: #55ce63;
            border-color: #0000;
        }

        Labels
        label.form-label1 {
