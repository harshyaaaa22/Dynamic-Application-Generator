@using DynamicAppGenerator.Services
@model LayoutTemplate
@{
    ViewData["Title"] = "Preview Layout";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Layout Preview - @Model.Name</title>
    <style>
        @Model.CssContent
    </style>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .preview-toolbar {
            position: fixed;
            top: 0;
            right: 0;
            padding: 10px;
            background-color: rgba(0,0,0,0.7);
            color: white;
            z-index: 9999;
            border-bottom-left-radius: 5px;
        }

            .preview-toolbar a {
                color: white;
                margin-left: 10px;
                text-decoration: none;
            }

                .preview-toolbar a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="preview-toolbar">
        <span>Previewing: @Model.Name</span>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a asp-action="Index">Back to List</a>
    </div>

    @Html.Raw(Model.LayoutContent)

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Any JavaScript for the preview can go here
       
    </script>
</body>
</html>