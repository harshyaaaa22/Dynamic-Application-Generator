@model DynamicAppGenerator.Models.GeneratorConfig
@{
    ViewData["Title"] = "Generate Application";
}

<h2>Generate Application</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Generate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationName" class="control-label">Application Name</label>
                <input asp-for="ApplicationName" class="form-control" />
                <span asp-validation-for="ApplicationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutputPath" class="control-label">Output Path</label>
                <input asp-for="OutputPath" class="form-control" />
                <span asp-validation-for="OutputPath" class="text-danger"></span>
                <small class="form-text text-muted">Default: C:\GeneratedApps2</small>
            </div>
           
            <div class="form-group form-check">
                <input asp-for="IncludeAuthentication" class="form-check-input" />
                <label asp-for="IncludeAuthentication" class="form-check-label">Include Authentication</label>
            </div>
            <div class="form-group form-check">
                <input asp-for="IncludeAuthorization" class="form-check-input" />
                <label asp-for="IncludeAuthorization" class="form-check-label">Include Authorization</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Generate Project" class="btn btn-success" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
            </div>
        </form>
    </div>
</div>