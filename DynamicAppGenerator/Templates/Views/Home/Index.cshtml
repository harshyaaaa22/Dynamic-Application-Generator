@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Projects</title>
    <style>
        /* Using unique prefixed class names to avoid conflicts */
        .cp-container {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #6e8efb, #a777e3);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        .cp-card {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            padding: 40px;
            text-align: center;
            max-width: 600px;
            width: 90%;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

            .cp-card::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: linear-gradient(45deg, transparent 40%, rgba(110, 142, 251, 0.1) 50%, transparent 60%);
                transform: rotate(45deg);
                animation: cp-shine 6s infinite linear;
                z-index: -1;
            }

        @@keyframes cp-shine {
            0% {
                top: -50%;
                left: -50%;
            }

            100% {
                top: 50%;
                left: 50%;
            }
        }

        #cp-heading {
            font-size: 36px;
            color: #333;
            margin-bottom: 20px;
            letter-spacing: 1px;
        }

        .cp-tagline {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
            margin-bottom: 30px;
        }

        .cp-tag-item {
            font-size: 24px;
            font-weight: 500;
            color: #555;
            opacity: 0;
            animation: cp-fade-in 0.8s forwards;
        }

            .cp-tag-item:nth-child(1) {
                animation-delay: 0.3s;
                color: #4a6cf7;
            }

            .cp-tag-item:nth-child(2) {
                animation-delay: 0.6s;
                color: #6e47d9;
            }

            .cp-tag-item:nth-child(3) {
                animation-delay: 0.9s;
                color: #a777e3;
            }

        .cp-dot {
            width: 8px;
            height: 8px;
            background-color: #6e8efb;
            border-radius: 50%;
        }

        .cp-button {
            background: linear-gradient(135deg, #6e8efb, #a777e3);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 30px;
            font-size: 18px;
            cursor: pointer;
            transition: transform 0.3s, box-shadow 0.3s;
            margin-top: 20px;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: bold;
        }

            .cp-button:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(110, 142, 251, 0.4);
            }

        .cp-shapes {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            overflow: hidden;
            z-index: -1;
        }

        .cp-shape {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
        }

        #cp-shape1 {
            width: 120px;
            height: 120px;
            top: 20%;
            left: 10%;
            animation: cp-float 12s infinite ease-in-out;
        }

        #cp-shape2 {
            width: 80px;
            height: 80px;
            top: 60%;
            right: 15%;
            animation: cp-float 10s infinite ease-in-out reverse;
        }

        #cp-shape3 {
            width: 150px;
            height: 150px;
            bottom: 10%;
            left: 20%;
            animation: cp-float 14s infinite ease-in-out;
        }

        @@keyframes cp-float {
            0% {
                transform: translate(0, 0) rotate(0deg);
            }

            50% {
                transform: translate(20px, 20px) rotate(180deg);
            }

            100% {
                transform: translate(0, 0) rotate(360deg);
            }
        }

        @@keyframes cp-fade-in {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 768px) {
            #cp-heading {
                font-size: 28px;
            }

            .cp-tagline {
                flex-direction: column;
                gap: 5px;
            }

            .cp-tag-item {
                font-size: 20px;
            }

            .cp-dot {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="cp-container">
        <div class="cp-shapes">
            <div class="cp-shape" id="cp-shape1"></div>
            <div class="cp-shape" id="cp-shape2"></div>
            <div class="cp-shape" id="cp-shape3"></div>
        </div>
        <div class="cp-card">
            <h1 id="cp-heading">Create Projects</h1>
            <div class="cp-tagline">
                <div class="cp-tag-item">Faster.</div>
                <div class="cp-dot"></div>
                <div class="cp-tag-item">Smarter.</div>
                <div class="cp-dot"></div>
                <div class="cp-tag-item">Easier.</div>
            </div>
            <button class="cp-button">Get Started</button>
        </div>
    </div>
</body>
</html>