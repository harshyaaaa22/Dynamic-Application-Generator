@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Horizon | Creative Digital Solutions</title>
    <style>
        /* Base styles and reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }

        body {
            color: #333;
            background-color: #f8f9fa;
            line-height: 1.6;
            overflow-x: hidden;
        }

        /* Header and navigation */
        header {
            position: fixed;
            width: 100%;
            z-index: 100;
            transition: background-color 0.3s ease;
            padding: 1.5rem 5%;
        }

        .scrolled {
            background-color: rgba(255, 255, 255, 0.97);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }



        .logo {
            font-size: 1.8rem;
            font-weight: 700;
            color: #111;
            text-decoration: none;
        }

            .logo span {
                color: #3b82f6;
            }

        .nav-links {
            display: flex;
            gap: 2rem;
        }

            .nav-links a {
                text-decoration: none;
                color: #333;
                font-weight: 500;
                font-size: 1rem;
                transition: color 0.3s ease;
            }

                .nav-links a:hover {
                    color: #3b82f6;
                }

        .btn-primary {
            background-color: #3b82f6;
            color: white;
            padding: 0.7rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

            .btn-primary:hover {
                background-color: #2563eb;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(59, 130, 246, 0.4);
            }

        /* Hero Section */
        .hero {
            height: 100vh;
            display: flex;
            align-items: center;
            padding: 0 5%;
            position: relative;
            overflow: hidden;
            background: linear-gradient(120deg, #f8f9fa 50%, #e9effd 100%);
        }

        .hero-content {
            max-width: 600px;
            z-index: 2;
        }

        .hero h1 {
            font-size: 4rem;
            line-height: 1.2;
            margin-bottom: 1.5rem;
            font-weight: 800;
            background: linear-gradient(to right, #111, #3b82f6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            color: #555;
        }

        .hero-buttons {
            display: flex;
            gap: 1rem;
        }

        .btn-secondary {
            padding: 0.7rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            color: #333;
            border: 2px solid #333;
        }

            .btn-secondary:hover {
                background-color: #111;
                color: white;
            }

        .hero-image {
            position: absolute;
            right: 20%;
            top: 40%;
            transform: translateY(-20%);
            width: 55%;
            z-index: 2;
            pointer-events: none;
        }

        @@media (max-width: 1024px) {
            .hero-image {
                display: none;
            }
        }

        .shape-1 {
            position: absolute;
            width: 300px;
            height: 300px;
            background-color: rgba(59, 130, 246, 0.2);
            border-radius: 50%;
            top: 10%;
            left: 10%;
            z-index: 0;
            filter: blur(80px);
        }

        .shape-2 {
            position: absolute;
            width: 200px;
            height: 200px;
            background-color: rgba(249, 115, 22, 0.15);
            border-radius: 50%;
            bottom: 15%;
            right: 20%;
            z-index: 0;
            filter: blur(60px);
        }

        /* Services Section */
        .services {
            padding: 8rem 5%;
            background-color: white;
        }

        .section-header {
            text-align: center;
            margin-bottom: 5rem;
        }

        .section-title {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .section-subtitle {
            color: #666;
            max-width: 700px;
            margin: 0 auto;
        }

        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2.5rem;
        }

        .service-card {
            background-color: #fff;
            border-radius: 20px;
            padding: 2.5rem;
            transition: all 0.3s ease;
            border: 1px solid #eaeaea;
        }

            .service-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.06);
            }

        .service-icon {
            width: 60px;
            height: 60px;
            background-color: #e9effd;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 15px;
            margin-bottom: 1.5rem;
        }

            .service-icon svg {
                width: 30px;
                height: 30px;
                color: #3b82f6;
            }

        .service-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .service-desc {
            color: #666;
        }

        /* Features Section */
        .features {
            padding: 8rem 5%;
            background-color: #f8f9fa;
        }

        .features-container {
            display: flex;
            align-items: center;
            gap: 4rem;
        }

        .features-image {
            flex: 1;
            position: relative;
        }

            .features-image img {
                width: 100%;
                border-radius: 20px;
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            }

        .features-content {
            flex: 1;
        }

        .features-list {
            list-style-type: none;
        }

        .feature-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 2rem;
        }

        .feature-icon {
            width: 45px;
            height: 45px;
            background-color: #e9effd;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            margin-right: 1.5rem;
            flex-shrink: 0;
        }

            .feature-icon svg {
                width: 24px;
                height: 24px;
                color: #3b82f6;
            }

        .feature-text h3 {
            font-size: 1.3rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .feature-text p {
            color: #666;
        }

        /* Testimonials Section */
        .testimonials {
            padding: 8rem 5%;
            background-color: white;
            text-align: center;
        }

        .testimonial-cards {
            display: flex;
            gap: 2rem;
            margin-top: 4rem;
            justify-content: center;
        }

        .testimonial-card {
            background-color: #fff;
            border-radius: 20px;
            padding: 2.5rem;
            border: 1px solid #eaeaea;
            text-align: left;
            max-width: 350px;
            transition: all 0.3s ease;
        }

            .testimonial-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.06);
            }

        .testimonial-content {
            margin-bottom: 2rem;
            font-style: italic;
            color: #555;
        }

        .testimonial-author {
            display: flex;
            align-items: center;
        }

        .author-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 1rem;
            background-color: #e9effd;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: #3b82f6;
        }

        .author-info h4 {
            font-weight: 600;
            margin-bottom: 0.2rem;
        }

        .author-info p {
            color: #888;
            font-size: 0.9rem;
        }

        /* CTA Section */
        .cta {
            padding: 6rem 5%;
            background-color: #111;
            color: white;
            text-align: center;
        }

        .cta-content {
            max-width: 800px;
            margin: 0 auto;
        }

        .cta h2 {
            font-size: 3rem;
            margin-bottom: 1.5rem;
            font-weight: 700;
        }

        .cta p {
            font-size: 1.2rem;
            color: #aaa;
            margin-bottom: 2.5rem;
        }

        /* Footer */
        footer {
            padding: 4rem 5%;
            background-color: #f8f9fa;
        }

        .footer-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 3rem;
        }

        .footer-logo {
            font-size: 1.8rem;
            font-weight: 700;
            color: #111;
            margin-bottom: 1.5rem;
            display: block;
        }

            .footer-logo span {
                color: #3b82f6;
            }

        .footer-about p {
            color: #666;
            margin-bottom: 1.5rem;
        }

        .social-links {
            display: flex;
            gap: 1rem;
        }

        .social-icon {
            width: 40px;
            height: 40px;
            background-color: #e9effd;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

            .social-icon:hover {
                background-color: #3b82f6;
            }

            .social-icon svg {
                width: 20px;
                height: 20px;
                color: #3b82f6;
                transition: all 0.3s ease;
            }

            .social-icon:hover svg {
                color: white;
            }

        .footer-links h3, .footer-contact h3 {
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

        .footer-menu {
            list-style-type: none;
        }

            .footer-menu li {
                margin-bottom: 0.8rem;
            }

            .footer-menu a {
                color: #666;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .footer-menu a:hover {
                    color: #3b82f6;
                }

        .contact-info {
            list-style-type: none;
        }

            .contact-info li {
                display: flex;
                align-items: flex-start;
                margin-bottom: 1rem;
                color: #666;
            }

            .contact-info svg {
                width: 20px;
                height: 20px;
                color: #3b82f6;
                margin-right: 1rem;
                flex-shrink: 0;
            }

        .copyright {
            margin-top: 4rem;
            padding-top: 2rem;
            border-top: 1px solid #eaeaea;
            text-align: center;
            color: #888;
            font-size: 0.9rem;
        }

        /* Responsive design */
        @@media (max-width: 1024px) {
            .hero h1 {
                font-size: 3rem;
            }
            /*  .hero-image {
                                width: 45%;
                                right: 0;
                            } */

            .features-container {
                flex-direction: column;
            }

            .testimonial-cards {
                flex-direction: column;
                align-items: center;
            }
        }

        @@media (max-width: 768px) {
            header {
                padding: 1rem 5%;
            }

            .nav-links {
                display: none;
            }

            .hero {
                height: auto;
                padding: 120px 5% 60px;
            }

                .hero h1 {
                    font-size: 2.5rem;
                }
            /*  .hero-image {

                                width: 90%;
                                margin-top: 3rem;
                                transform: none;
                                right: auto;
                                top: auto;
                            } */

            .hero-content {
                text-align: center;
                margin: 0 auto;
            }

            .hero-buttons {
                justify-content: center;
            }

            .service-card {
                padding: 1.5rem;
            }

            .features-image {
                margin-top: 2rem;
            }

            .features-content {
                order: -1;
            }

            .testimonial-card {
                max-width: 100%;
            }

            .cta h2 {
                font-size: 2rem;
            }
        }
    </style>
</head>
